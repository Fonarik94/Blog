<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">
    <!--Servlets-->
    <servlet>
        <servlet-name>Root</servlet-name>
        <servlet-class>com.fonarik94.servlets.RootServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Root</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Administration</servlet-name>
        <servlet-class>com.fonarik94.servlets.AdministrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Administration</servlet-name>
        <url-pattern>/administration/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.fonarik94.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>fileRequestServlet</servlet-name>
        <servlet-class>com.fonarik94.servlets.FileRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>fileRequestServlet</servlet-name>
    <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>


    <!--Filters-->
    <filter>
        <filter-name>RequestDetectorFilter</filter-name>
        <filter-class>com.fonarik94.filters.RequestDetectorFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ProcessingTimeFilter</filter-name>
        <filter-class>com.fonarik94.filters.ProcessingTimeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ProcessingTimeFilter</filter-name>
        <servlet-name>Root</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RequestDetectorFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>/WEB-INF/log4j2.xml</param-value>
    </context-param>

    <!--Login configuration-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secured</web-resource-name>
            <url-pattern>/administration/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>DELETE</http-method>
            <http-method>HEAD</http-method>
            <http-method>UPDATE</http-method>
        </web-resource-collection>

        <auth-constraint>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>manager</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/jsp/login.jsp</form-login-page>
            <form-error-page>/jsp/error.jsp</form-error-page>
        </form-login-config>
    </login-config>

</web-app>