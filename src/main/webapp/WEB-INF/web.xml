<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">
    <!--Servlets-->
    <servlet>
        <servlet-name>WakeOnLan</servlet-name>
        <servlet-class>com.fonarik94.servlets.WOL</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>test</servlet-name>
        <!--<jsp-file>/test.jsp</jsp-file>-->
        <servlet-class>com.fonarik94.servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>goAway</servlet-name>
        <servlet-class>com.fonarik94.servlets.GoAwayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>goAway</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fileRequestServlet</servlet-name>
        <servlet-class>com.fonarik94.servlets.FileRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileRequestServlet</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WakeOnLan</servlet-name>
        <url-pattern>/wol/*</url-pattern>
    </servlet-mapping>
    <!--Filters-->
    <filter>
        <filter-name>ProcessingTimeFilter</filter-name>
        <filter-class>com.fonarik94.filters.ProcessingTimeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>requestDetector</filter-name>
        <filter-class>com.fonarik94.filters.RequestDetectorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ProcessingTimeFilter</filter-name>
        <servlet-name>URLRewrite</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>requestDetector</filter-name>
        <servlet-name>URLRewrite</servlet-name>
    </filter-mapping>
    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>/WEB-INF/log4j2.xml</param-value>
    </context-param>

</web-app>